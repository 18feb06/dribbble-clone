generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
}

model User {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  userId      String
  description String?
  githubUrl   String?
  linkedinUrl String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId])
}

model Project {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  userId      String
  title       String
  description String
  image       String
  liveSiteUrl String
  githubUrl   String
  category    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId])
}