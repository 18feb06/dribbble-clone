generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id          String    @id @default(cuid())
  userId      String
  description String?   @db.Text
  githubUrl   String?
  linkedinUrl String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId])
}

model Project {
  id          String    @id @default(cuid())
  userId      String
  title       String
  description String    @db.Text
  image       String    @db.Text
  liveSiteUrl String
  githubUrl   String
  category    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId])
}